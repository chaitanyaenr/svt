{
  "kind": "Template",
  "apiVersion": "template.openshift.io/v1",
  "metadata": {
    "name": "buildTemplate",
    "creationTimestamp": null,
    "annotations": {
      "description": "This template will create a single (failed) build.",
      "tags": ""
    }
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Build",
      "metadata": {
        "annotations": {
          "openshift.io/build.number": "1",
          "openshift.io/build.pod-name": "buildconfig${IDENTIFIER}-1-build"
        },
        "labels": {
          "buildconfig": "buildconfig${IDENTIFIER}",
          "openshift.io/build-config.name": "buildconfig${IDENTIFIER}",
          "template": "buildConfigTemplate"
        },
        "name": "build${IDENTIFIER}-1"
      },
      "spec": {
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "imagestream${IDENTIFIER}:latest"
          }
        },
        "resources": {},
        "serviceAccount": "builder",
        "source": {
          "dockerfile": "FROM quay.io/openshift-scale/mastervertical-build\nUSER 1001",
          "git": {
            "uri": "https://github.com/openshift-scale/hello-openshift.git"
          },
          "secrets": null,
          "type": "Git"
        },
        "strategy": {
          "sourceStrategy": {
            "from": {
              "kind": "DockerImage",
              "name": "quay.io/openshift-scale/mastervertical-build:latest"
            }
          },
          "type": "Source"
        }
      },
      "status": {
        "config": {
          "kind": "BuildConfig",
          "name": "buildconfig${IDENTIFIER}"
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "IDENTIFIER",
      "description": "Number to append to the name of resources",
      "value": "1",
      "required": true
    }
  ],
  "labels": {
    "template": "buildTemplate"
  }
}
